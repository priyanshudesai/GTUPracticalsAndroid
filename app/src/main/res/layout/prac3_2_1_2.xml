<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/title_lgn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:text="LOGIN FORM"/>
    <TextView
        android:id="@+id/txt_enter_name_lgn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/title_lgn"/>
    <EditText
        android:layout_marginLeft="10dp"
        android:layout_below="@id/title_lgn"
        android:id="@+id/entr_email_lgn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_enter_pass_lgn"
        android:hint="Enter Email"/>
    <TextView
        android:id="@+id/txt_enter_pass_lgn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/entr_email_lgn"/>
    <EditText
        android:layout_marginLeft="10dp"
        android:layout_below="@id/entr_email_lgn"
        android:id="@+id/entr_pass_lgn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_enter_pass_lgn"
        android:inputType="textPassword"
        android:hint="Enter Password"/>
    <Button
        android:layout_below="@id/entr_pass_lgn"
        android:id="@+id/btn_lgn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="LOGIN"/>
</RelativeLayout>